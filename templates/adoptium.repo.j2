[Adoptium]
name=Adoptium
{% if ansible_distribution | lower == "redhat" %}
baseurl=https://packages.adoptium.net/artifactory/rpm/rhel/{{ ansible_distribution_major_version }}/$basearch
{% elif ansible_distribution|lower == "almalinux" %}
baseurl=https://packages.adoptium.net/artifactory/rpm/centos/{{ ansible_distribution_major_version }}/$basearch
{% else %}
baseurl=https://packages.adoptium.net/artifactory/rpm/{{ ansible_distribution | lower }}/{{ ansible_distribution_major_version }}/$basearch
{% endif %}
enabled=1
gpgcheck=1
gpgkey=https://packages.adoptium.net/artifactory/api/gpg/key/public
